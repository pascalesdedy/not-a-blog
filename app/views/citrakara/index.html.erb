<%= render 'header' %>

    <!-- Blog Section -->
    <section id="blog" class="section">
      <p id="notice"><%= notice %></p>
      <!-- Container Starts -->
      <div class="container">
        <br>
        <div class="row">
          <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 blog-item">

            <!-- Blog Item Starts -->
            <% @result['paintings'].each do |i|  %>
            <div class="blog-item-wrapper wow fadeInUp" data-wow-delay="0.3s">
              <div class="blog-item-img">
                <a>
                <%= image_tag i["imagepath"]["url"]%>
      
                </a>                
              </div>
              <div class="blog-item-text"> 
                <h3>
                <td><%= i["title"] %></td>
                </h3>
                <div class="meta-tags">
                  <span class="date"><i class="fa fa-calendar-full"></i>Created at: <%= i["created_at"] %></span>
                  <!-- <span class="comments"><a href="#"><i class="fa fa-bubble"></i> 24 comments </a></span> -->
                </div>
                <p>
               <td><%= i["description"] %> </td>
                </p>
                
              </div>
            </div>
            <!-- Blog Item Wrapper Ends-->
          </div>

          <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 blog-item">
          <% end %>
          </div>
        </div>
      </div>
    </section>
    <!-- blog Section End -->